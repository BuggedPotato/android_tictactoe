<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kółko i krzyżyk"
        android:textSize="48sp"
        android:textAlignment="center"
        android:fontFamily="@font/consola"
        android:layout_marginBottom="100dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:text="Zagraj offline"
            android:textColor="#111111"
            android:background="@drawable/rounded_button_y"
            />

        <Button
            android:id="@+id/btnOnline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:text="Zagraj online"
            android:textColor="#111111"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
            android:background="@drawable/rounded_button_y"
            />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>